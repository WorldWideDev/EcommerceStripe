@{
    ViewData["Title"] = "Home Page";
}
@model ECommerce.Models.ProductIndexModels
@using ECommerce.Models
<form method="post" asp-controller="Product" asp-action="Create">
    <div class="form-group">
        <span asp-validation-for="NewProduct.Name"></span>
        <label asp-for="NewProduct.Name"></label>
        <input class="form-control" asp-for="NewProduct.Name">
    </div>   
    <div class="form-group">
        <span asp-validation-for="NewProduct.Image"></span>
        <label asp-for="NewProduct.Image"></label>
        <input class="form-control" asp-for="NewProduct.Image">
    </div>
    <div class="form-group">
        <span asp-validation-for="NewProduct.Description"></span>
        <label asp-for="NewProduct.Description"></label>
        <input class="form-control" asp-for="NewProduct.Description">
    </div>
    <div class="form-group">
        <span asp-validation-for="NewProduct.Quantity"></span>
        <label asp-for="NewProduct.Quantity"></label>
        <input class="form-control" asp-for="NewProduct.Quantity">
    </div>
    <input type="submit" value="Add">
</form>
@foreach(var p in Model.Products)
{
    <div class="product">
        <img src="@p.image_link" alt="product-image">
        <p>@p.name</p>
        <p>(@p.quantity left)</p>
    </div>
}
